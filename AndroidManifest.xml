<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vjt.app.internetstatus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vjt.app.internetstatus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.vjt.app.internetstatus.InternetService" />

        <receiver
            android:name="com.vjt.app.internetstatus.InternetNotifier"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.vjt.app.internetstatus.ONLINE" />
                <action android:name="com.vjt.app.internetstatus.OFFLINE" />
                <action android:name="com.vjt.app.internetstatus.BAD" />
                <action android:name="com.vjt.app.internetstatus.STOPPED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.vjt.app.internetstatus.BootReceiver"
            android:label="BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>